{% extends 'base.html.twig' %}

{% block title %}Consultant |
	{{ parent() }}
{% endblock %}

{% block body %}
	{{ parent() }}

	<main class="container">

	{% if applies %}
		<div class="applies">
			<h1> {{ titlepage }} </h1>

			{% for apply in applies %}
				<div class="apply row">
					<div class="col-8 text-center">
						{{ apply.jobOffer.title }}
						{{ apply.jobOffer.recruiter.nameCompany }}
						{{ apply.candidate.lastname }}
						{{ apply.candidate.cv }}
<pre>
{{ dump(apply.id) }}
{{ dump(apply.isActive) }}
</pre>
					</div>
					<div class="col-4">
						<a href="{{ path('active_apply', { id : apply.id }) }}" type="button" class="btn btn-primary btn-sm">VALIDER</a>
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
			<div class="alert alert-success" role="alert">
				<div class="alert-message text-center">
					<h1>Aucune Candidatures Ã  valider.</h1>
				</div>
			</div>

	{% endif %}
	</main>
{% endblock %}

