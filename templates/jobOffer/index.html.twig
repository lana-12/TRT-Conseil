{% extends 'base.html.twig' %}

{% block title %}Annonces | {{ parent() }}
{% endblock %}

{% block body %}
		{{ parent() }}

<body class="jobOffer">

	<main class="container">
		<h2 class="text-center m-4 fs-1">{{ titlepage }} 
		</h2>

{% if joboffers %}

	{% for joboffer in joboffers %}

<div class="box_jobOffer">
		<h3 class="center">La société <strong>{{ joboffer.recruiter.nameCompany}}</strong> recherche</h3>
		<h4 class="titleJobOffer center">{{ joboffer.title }}</h4>
		<h5 class="city">Sur {{ joboffer.city }}</h5>

		<p>{{ joboffer.content }}</p>

	{% if app.user %}
	{# LIEN TEST #}
		<a href="{{ path('apply', { id : joboffer.id }) }}" type="button" class="btn btn-primary btn-sm">Postuler</a>


	{# <a href="{{ path('active')}}" class="btn btn-primary btn-sm" type="button" alt="Cliquez ici pour postuler" title="Cliquez ici pour postuler">Postuler</a> #}
	{% else %}
		<div class="alert alert-success mt-4 text-center">
			<p>Vous devez être connecté pour postuler à cette annonce !!</p>
			<div class="d-flex d-flex justify-content-around">
				<a class="" title="Lien pour se connecter" alt="Lien pour se connecter" href=" {{ path('app_login') }} ">Connectez-vous</a>
				<a class="" title="Lien pour s'inscrire" alt="Lien pour s'inscrire" href=" {{ path('app_register') }} ">Inscrivez-vous</a>

			</div>


		</div>

	{% endif %}
</div>


{% endfor %}

{% else %}

	<div class="alert alert-info mt-4 text-center">
		<p>Aucunes offres actuellement</p>
	</div>


{% endif %}

	</main>
</body>	
{% endblock %}

