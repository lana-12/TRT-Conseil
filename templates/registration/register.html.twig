{% extends "base.html.twig" %}

{% block title %}S'inscrire |
	{{parent()}}
{% endblock %}



{% block body %}
<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

    <main class="example-wrapper">

        <h2>Création d'un compte de connexion</h2>
{% for message in app.flashes('success') %}
	<div class="alert alert-success mt-4 text-center">
		{{ message }}
	</div>

{% endfor %}


		{{ form_start(formRegister)}}	

<div class="form-group">
{{ form_row(formRegister.type, {'label':'Vous êtes un : ',}) }}
</div>

<div class="form-group">
    {{ form_row(formRegister.email, {'label':'Email','attr': {'placeholder':'exemple@exemple.fr'}}) }}
</div>

<div class="form-group  ">
	{{ form_row(formRegister.password,) }}

</div>




<button class="btn btn-primary  mx-auto m-5" type='submit'>{{ button_label|default('Enregistrer')}}</button>


{{ form_rest(formRegister) }}




    </main>
{% endblock %}