{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
{{ parent() }}
<body class="register">

    

    <section class="container">
        <div class="row">
            <div class="col">
                <h2 class='titleCustom2 center'>Création de votre Compte de connexion</h2>

            {{ form_start(registrationForm) }}

                <fieldset class="mb-3 legend">
                    <div class="">
                        {{ form_row(registrationForm.roles,{'label':'Vous êtes un : ', 'attr': {'class': ''}}) }}
                    </div>

                    <div class="mt-3">
                        {{ form_row(registrationForm.email, {'label':'E-mail','attr': {'placeholder':'exemple@exemple.fr'}}) }}
                    </div>

                    <div class="mt-3">
                        {{ form_row(registrationForm.password, {
                                label: 'Mot de passe'
                            }) }}
                    </div>

                    <div class="mt-3">
                        {{ form_row(registrationForm.rgpdConsent, {
                                label: 'En m\'inscrivant sur ce site, j\'accepte ...'
                            }) }}
                    </div>
                    
                

                <button type="submit" class="btn btn-sm btnCustom my-3">M'inscrire</button>
                {{ form_end(registrationForm) }}

                <a class="registerLink" title="Lien pour se connecter" alt="Lien pour se connecter" href=" {{ path('app_login') }} ">Connectez-vous</a>

                </fieldset>
            </div>
        </div>
    </section>

</body>


{% endblock %}
