{% extends 'base.html.twig' %}

{% block title %}Profil |
	{{parent()}}
{% endblock %}


{% block body %}
	{{ parent() }}
<body class="compte">
	
	<main class="container mt-3">
		<div class="row">
			<div class="col ">
			{% if editMode %}
				<h2 class="mt-4 center blue fs-1"> Modifier votre profil</h2>
			{% else %}
				<h2 class="mt-4 center blue fs-1"> Compl√©ter votre profil</h2>
			{% endif %}

		{{ form_start(recruiterForm, { 'attr': {'class': 'formProfil'} }) }}

			<fieldset class="mb-3">
				{{ form_row(recruiterForm.nameCompany,{'label':'Nom de l\'entreprise',}) }}

				{{ form_row(recruiterForm.address, {'label':'Adresse','attr': {'placeholder':'1 av du parc'}}) }}
				{{ form_row(recruiterForm.zipCode, { 'label': 'Code postal','attr': {'placeholder':'34000'}}) }}
				{{ form_row(recruiterForm.city, {'label': 'Ville', 'attr': {'placeholder':'Montpellier'}}) }}
			</fieldset>
				<div class="d-flex justify-content-center">
				{% if editMode %}
					<button type="submit" class="btn btn-sm btn-warning my-3 ">Modifier</button>
				{% else %}
					<button type="submit" class="btn btn-sm btn-info my-3 mx-auto">Enregistrer</button>
				{% endif %}
				</div>

		{{ form_end(recruiterForm) }}
			</div>
		</div>
	</main>
</body>

{% endblock %}

