{% extends 'base.html.twig' %}

{% block title %}Recruteur |
	{{ parent() }}!
{% endblock %}

{% block body %}
	{{ parent() }}
<body class="compte">
	<main class="container">
	
	{% for recruiter in recruiters %}
		<div class=" d-flex justify-content-center  ">
			<nav class=" shadow-5-strong ">
				<a class=" pe-2" href="{{ path('recruiter')}}" alt="Accéder à mes annonces" title="Accéder à mes annonces">Mon Espace

				</a>
				<a class="underline pe-2" href="{{ path('jobOffers')}}" aria-current="page" alt="Page active" title="Page active">Mes Annonces

				</a>
				<a class="" href="{{ path('post')}}" alt="Poster une annonces" title="Poster une annonces">Poster une annonce
				</a>
			</nav>
		</div>

		<section>
			<div class="row">
				<div class="col-12">
					<h3 class="center fs-1 mt-5 blue">Mes annonces</h3>
					{% include "recruiter/_showJobOffer.html.twig" %}
				</div>
			</div>
		</section>
		<section class="bg-white rounded">
			<div class="row">
				<div class="col-12">
					<h3 class="center mt-5 txtShadow fs-1">Candidatures</h3>

					{% include "recruiter/_showCandidacy.html.twig" %}

				</div>
			</div>
		</section>

	{% else %}
		<div class="container alert alert-danger mt-5" role="alert">
			<div class="alert-message text-center">
				<h4 class="text-dark">Vous devez mettre vous profil à jour pour accéder à cette page</h4>
				<a class="text-primary" title="Lien pour se connecter" alt="Lien pour se connecter" href=" {{ path('profilR') }} ">Complétez votre profil</a>
			</div>
		</div>
	{% endfor %}

	</main>
</body>
{% endblock %}

